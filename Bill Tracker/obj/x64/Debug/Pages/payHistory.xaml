<Page
    x:Class="Bill_Tracker.payHistory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bill_Tracker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <SwipeItems x:Key="PayRight" Mode="Reveal">
            <SwipeItem x:ConnectionId='10' Text="Delete" IconSource="{StaticResource DeleteIcon}" Background="#FF932F2F" Foreground="White"                          />
        </SwipeItems>

        <DataTemplate x:Key="HistLarge" >
            <SwipeControl RightItems="{StaticResource PayRight}">

                <Grid x:ConnectionId='7' Height="43" MinWidth="400" Background="#f1ffed"                                                                                              CornerRadius="5" BorderThickness="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding Path=billName}" HorizontalAlignment="Left" Style="{StaticResource billName}" />
                    <TextBlock Grid.Column="1" Text="{Binding Path=_displayDate}" Style="{StaticResource billName}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Path=_displayAmount}" Grid.Column="2" HorizontalAlignment="Center" Foreground="Black" Style="{StaticResource billCost}" />


                    <RelativePanel Name="bttnPanel" Grid.Column="3" Visibility="Collapsed" VerticalAlignment="Center">
                        <Button x:ConnectionId='9'  Style="{StaticResource gridButton}"                      >
                            <FontIcon Glyph="&#xE107;" FontSize="14"/>
                        </Button>
                    </RelativePanel>
                </Grid>
            </SwipeControl>
        </DataTemplate>

        <DataTemplate x:Key="HistSmall" >
            <SwipeControl RightItems="{StaticResource PayRight}">
                <Grid x:ConnectionId='3' MinWidth="400" Height="43" Background="#f1ffed" Padding="0"                                                                                              BorderThickness="0,1,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding Path=_displayDate}" Style="{StaticResource billName}" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Path=_displayAmount}" Grid.Column="1" Foreground="Black" HorizontalAlignment="Center" Style="{StaticResource billCost}" />

                    <RelativePanel Name="bttnPanel" Grid.Column="2" Visibility="Collapsed" VerticalAlignment="Center">
                        <Button x:ConnectionId='5'  Style="{StaticResource gridButton}"                      >
                            <FontIcon Glyph="&#xE107;" FontSize="14"/>
                        </Button>
                    </RelativePanel>
                </Grid>
            </SwipeControl>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource MainBackgrnd}">

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='11' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='12' x:Name="VisualStatePhone">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="lstPayments.ItemTemplate" Value="{StaticResource ResourceKey=HistSmall}"/>
                        <Setter Target="day30.Width" Value="30"/>
                        <Setter Target="day30.Label" Value="30" />
                        <Setter Target="day60.Width" Value="30"/>
                        <Setter Target="day60.Label" Value="60" />
                        <Setter Target="day90.Width" Value="30"/>
                        <Setter Target="day90.Label" Value="90" />
                        <Setter Target="day180.Width" Value="30"/>
                        <Setter Target="day180.Label" Value="180" />
                        <Setter Target="day365.Width" Value="30"/>
                        <Setter Target="day365.Label" Value="365" />
                        <Setter Target="dayAll.Width" Value="30"/>
                        <!--<Setter Target="histUnArch.Width" Value="40"/>
                        <Setter Target="histUnArch.Label" Value="Archive" />-->
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='13' x:Name="VisualStateTablet">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="850" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="lstPayments.ItemTemplate" Value="{StaticResource ResourceKey=HistLarge}"/>
                        <Setter Target="day30.Width" Value="70"/>
                        <Setter Target="day30.Label" Value="30 Days" />
                        <Setter Target="day60.Width" Value="70"/>
                        <Setter Target="day60.Label" Value="60 Days" />
                        <Setter Target="day90.Width" Value="70"/>
                        <Setter Target="day90.Label" Value="90 Days" />
                        <Setter Target="day180.Width" Value="70"/>
                        <Setter Target="day180.Label" Value="180 Days" />
                        <Setter Target="day365.Width" Value="70"/>
                        <Setter Target="day365.Label" Value="365 Days" />
                        <Setter Target="dayAll.Width" Value="70"/>                        
                        <!--<Setter Target="histUnArch.Width" Value="70"/>
                        <Setter Target="histUnArch.Label" Value="Archive" />-->
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <RelativePanel Grid.Column="1" Background="{StaticResource iconBarBrush}" Padding="10,0,0,0">
                <StackPanel x:ConnectionId='36' Name="stckBillType" Orientation="Horizontal" RelativePanel.AlignVerticalCenterWithPanel="True">
                    <TextBlock Text="Bill Type" FontSize="20" Foreground="White"  Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <AppBarToggleButton x:ConnectionId='40' Name="bttnBillMo" Icon="Calendar" Label="Monthly" Foreground="White"                          />
                    <AppBarToggleButton x:ConnectionId='41' Name="bttnBillBiMo" Icon="CalendarDay" Label="Bi-Monthly" Foreground="White" LabelPosition="Default"                            />
                    <AppBarToggleButton x:ConnectionId='42' Name="bttnBillWkly" Icon="CalendarWeek" Label="Weekly" Foreground="White" LabelPosition="Default"                             />
                    <AppBarToggleButton x:ConnectionId='43' Name="bttnBillAnn" Label="Annual" Foreground="White"                          >
                        <TextBlock Text="&#xEC92;" FontFamily="Segoe MDL2 Assets" />
                    </AppBarToggleButton>                    
                </StackPanel>

                <StackPanel Orientation="Horizontal" RelativePanel.RightOf="stckBillType" RelativePanel.AlignVerticalCenterWithPanel="True" Margin="50,0,0,0">
                    <TextBlock Text="Category" FontSize="20" Foreground="White"  Margin="0,0,5,0" VerticalAlignment="Center"/>
                    <ComboBox x:ConnectionId='39' Name="cbxCat" Margin="10,0,0,0"                                           ></ComboBox>
                </StackPanel>

                <Button x:ConnectionId='37' Name="bttnHlp" RelativePanel.LeftOf="bttnAdd" RelativePanel.AlignBottomWithPanel="True" Content="&#xE946;" Style="{StaticResource topBttn}" Margin="0,0,9,8" Background="{StaticResource iconBarBrush}" Foreground="White"                      />
                <AppBarButton x:ConnectionId='38' Name="bttnAdd" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Icon="Add" Label="Add"  Foreground="White" Background="{StaticResource iconBarBrush}"                       />
            </RelativePanel>

            <Grid  Background="{StaticResource iconBarBrush}">
                <AppBarButton x:ConnectionId='35' Name="bttnBack" Icon="Back" Foreground="White" Background="#FF4F4E4E" Margin="5,0,0,0" LabelPosition="Collapsed"                        VerticalAlignment="Center"/>
            </Grid>


            <Grid Background="{StaticResource iconBarBrush}" Grid.Row="1">
                <Line X1="0" X2="200" Y1="0" Y2="0" StrokeThickness="5" Stroke="#FF4F4E4E" Canvas.ZIndex="10"/>
                <ListView x:ConnectionId='33' Name="histList" VerticalAlignment="Top"                                              Background="{StaticResource iconBarBrush}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Name}" Foreground="White" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="100" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="70" />
                </Grid.RowDefinitions>
                
<!-- Bill management FUnctions -->
                <Grid Background="#777676">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <RelativePanel>
                        <TextBlock x:ConnectionId='28' Name="lblBillName" Text="" Width="350" Style="{StaticResource Hist_DetailsTextMain}" RelativePanel.AlignLeftWithPanel="True"/>
                        <StackPanel x:ConnectionId='29' Name="stckBillOpt" Orientation="Horizontal" Background="{StaticResource iconBarBrush}" CornerRadius="10" Margin="0,3,10,0" Visibility="Collapsed" RelativePanel.AlignRightWithPanel="True">
                            <AppBarButton x:ConnectionId='30' Name="bttnBillEdit" Icon="Edit" Foreground="White" Label="Edit"                            />
                            <AppBarButton x:ConnectionId='31' Name="bttnBillDel" Icon="Delete" Foreground="White" Label="Delete"                          />
                            <AppBarToggleButton x:ConnectionId='32' Name="histUnArch" Icon="Document" Label="Archive" HorizontalAlignment="Right"                          Foreground="White"/>
                        </StackPanel>
                    </RelativePanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <TextBlock x:ConnectionId='23' Name="txtBillAmn" Text="Monthly Amount:" Visibility="Collapsed" FontSize="18" Style="{StaticResource Hist_DetailsText}"/>
                        <TextBlock x:ConnectionId='24' Name="lblBillDue" Text="" Width="150" FontSize="18" Style="{StaticResource Hist_DetailsText}" Foreground="DarkRed" />
                        <TextBlock x:ConnectionId='25' Name="txtBillCa" Text="Category:" Visibility="Collapsed" Style="{StaticResource Hist_DetailsText}"/>
                        <TextBlock x:ConnectionId='26' Name="lblBillCat" Text="" Style="{StaticResource Hist_DetailsText}" />
                        <TextBlock x:ConnectionId='27' Name="lblBillFreq" Text="" Style="{StaticResource Hist_DetailsText}" Margin="100,10,0,0" />

                    </StackPanel>
                </Grid>

                <ListView x:ConnectionId='14' Name="lstPayments" Grid.Row="1" SelectionMode="None" Background="{StaticResource MainBackgrnd}" ItemTemplate="{StaticResource HistLarge}" Padding="0" Margin="0,5,0,0">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>


                <StackPanel x:ConnectionId='15' Name="stkNoItems" Grid.Row="1" Width="400" Height="200" Padding="0,60,0,0" Visibility="Collapsed">
                    <TextBlock Text="There's no history yet, pay some bills!" TextWrapping="WrapWholeWords" Width="390" FontSize="28" TextAlignment="Center" HorizontalAlignment="Center" />
                </StackPanel>

                <Grid Grid.Row="2" Height="55" >
                    <StackPanel x:ConnectionId='16' Name="cmdbr" Style="{StaticResource Hist_TimeSpanStack}" Visibility="Collapsed">
                        <AppBarToggleButton x:ConnectionId='17' Name="day30" Icon="Calendar" Label="30 Days"                     Foreground="White" />
                        <AppBarToggleButton x:ConnectionId='18' Name="day60" Icon="Calendar" Label="60 Days"                     Foreground="White"/>
                        <AppBarToggleButton x:ConnectionId='19' Name="day90" Icon="Calendar" Label="90 Days"                     Foreground="White"/>
                        <AppBarToggleButton x:ConnectionId='20' Name="day180" Icon="Calendar" Label="180 Days"                      Foreground="White"/>
                        <AppBarToggleButton x:ConnectionId='21' Name="day365" Icon="CalendarDay" Label="365 Days"                      Foreground="White"/>
                        <AppBarToggleButton x:ConnectionId='22' Name="dayAll" Icon="CalendarWeek" Label="ALL"                      Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>

